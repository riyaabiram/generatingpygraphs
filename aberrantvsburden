options(repr.plot.width = 40, repr.plot.height = 20)


p1 <- ggstatsplot::ggscatterstats( data = BiliaryAdenoCA, x = 'Total Aberrant Segments', y = 'Total_Burden', xlab = 'Total Aberrant Segments', ylab = 'Total SV Burden', ggplot.component = list(theme(text = element_text(size = 3))), results.subtitle = FALSE, marginal = FALSE) + ggpubr::stat_cor(rr.label = TRUE, p.label = TRUE, size = 2) + ggtitle("BiliaryAdenoCA") +
  geom_point(size=0.5) + theme(plot.title=element_text(size=7)) + theme(axis.text=element_text(size=5)) + theme(axis.title.x = element_text(size = 5), axis.title.y = element_text(size = 5))
